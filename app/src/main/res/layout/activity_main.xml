<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#0F172A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="雪场磁控"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="戴手套·息屏也能控音乐"
        android:textColor="#9FB0D3"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:id="@+id/actionRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end">

        <Button
            android:id="@+id/btnManualZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚡ 手动归零"
            android:backgroundTint="#1F2937"
            android:textColor="#E5E7EB"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚙️ 设置"
            android:layout_marginStart="8dp"
            android:backgroundTint="#1F2937"
            android:textColor="#E5E7EB"
            style="@style/Widget.AppCompat.Button.Borderless" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardMetrics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        android:background="#182234"
        android:elevation="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvMagnitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 μT"
            android:textSize="44sp"
            android:textStyle="bold"
            android:textColor="#7DD3FC" />

        <TextView
            android:id="@+id/tvPoleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="极性: 未检测"
            android:textSize="18sp"
            android:textColor="#C7D2FE"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态: 监听中"
            android:textColor="#E5E7EB"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/layoutXYZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="3"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X: 0"
                android:textColor="#9FB0D3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y: 0"
                android:textColor="#9FB0D3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvZ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z: 0"
                android:textColor="#9FB0D3"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#111827"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardMetrics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最近日志"
            android:textStyle="bold"
            android:textColor="#E5E7EB" />

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待事件..."
            android:textColor="#9FB0D3"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:maxLines="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示：磁铁靠近耳机侧即可控制。若偏移，点击手动归零或在后台设置自动归零。"
            android:textColor="#6B7280"
            android:textSize="11sp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
