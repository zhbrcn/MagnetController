<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后台调校"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0F172A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="滑雪戴手套时用磁铁控耳机，核心逻辑已精简，这里只保留必要的自定义项。"
            android:textColor="#4B5563"
            android:textSize="13sp"
            android:paddingBottom="12dp"
            android:paddingTop="2dp" />

        <!-- 触发阈值 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="触发阈值"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="超过“触发阈值”开始计时，降到“恢复阈值”且防抖结束后视为抬起。单位：μT / ms"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="触发阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etThresholdTrigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 500"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="恢复阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etThresholdReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 300"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="恢复防抖 (ms)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etResetDebounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="例如 80"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="长按判定 (ms)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etLongPressMs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="例如 1500" />
        </LinearLayout>

        <!-- 极性与动作 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="极性与动作映射"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="先选模式，再配置长/短按动作。极性判定不稳定时可关闭。"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="模式选择"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:paddingBottom="6dp" />

            <RadioGroup
                android:id="@+id/rgPoleMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbBothPoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="所有极性（只看磁场强度）"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbDifferent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="区分极性（单独配置 N / S）" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/cbUsePolarity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启用极性判定（无法稳定判定时自动降级）"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />

            <LinearLayout
                android:id="@+id/groupAllPoleActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="不分极性动作"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="仅看磁场强度触发"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:paddingBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="短按动作"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spAllShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="长按动作"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spAllLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupSplitPoleActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="区分 N / S"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="保留原极性识别逻辑，适合双侧磁铁"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:paddingBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N 极短按"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spNShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N 极长按"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spNLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S 极短按"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spSShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S 极长按"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spSLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </LinearLayout>

        <!-- 触发反馈 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_desc"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchFeedbackSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_sound"
                android:textColor="#111827"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchFeedbackVoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_voice"
                android:textColor="#111827"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchFeedbackVibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_vibration"
                android:textColor="#111827"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- 自动归零 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动归零"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="两条规则并行：① 场强持续低于阈值；② 场强波动长期落在指定幅度内。满足任一即归零。"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低磁场阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 80"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低磁场维持时间 (秒)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroSeconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 4.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="稳定波动维持时间 (秒)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroStableSeconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 4.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="稳定波动幅度 (±μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroStableBand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 20.0" />
        </LinearLayout>

        <!-- 节能与采样 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="节能与采样"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低场时降低采样频率，节能同时保留灵敏度。单位：μT / ms / Hz"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="节能阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEnergyThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 100"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="降采样延时 (ms)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEnergyHoldMs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="例如 2000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高采样频率 (Hz)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSamplingHighHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 50"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低采样频率 (Hz)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSamplingLowHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 15" />
        </LinearLayout>

        <!-- 强磁保护 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="强磁贴合保护"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="强磁长时间贴合且波动极低时，忽略当前触发并用 3 声提示失败。单位：μT / ms"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="判定阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etStrongSuppressionThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 1800"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="持续时间 (ms)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etStrongSuppressionDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="例如 400"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最大抖动 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etStrongSuppressionJitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如 40" />
        </LinearLayout>

        <!-- 蓝牙白名单 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_desc"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/tvBtSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_selected_none"
                android:textColor="#374151"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/btnSelectBt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/bt_select_btn"
                android:background="@drawable/bg_button_flat"
                android:textColor="#0B1224"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- 保存 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="保存设置"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_flat"
                android:textColor="#0B1224" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
