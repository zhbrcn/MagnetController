<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0F172A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_subtitle"
            android:textColor="#4B5563"
            android:textSize="13sp"
            android:paddingBottom="12dp"
            android:paddingTop="2dp" />

        <!-- 触发阈值 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_threshold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_threshold"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_trigger_threshold"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etThresholdTrigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_threshold_trigger"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_reset_threshold"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etThresholdReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_threshold_reset"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_reset_debounce"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etResetDebounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/hint_reset_debounce"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_long_press_detect"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etLongPressMs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/hint_long_press" />
        </LinearLayout>

        <!-- 极性与动作 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_polarity_actions"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_polarity_actions"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_mode_selection"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:paddingBottom="6dp" />

            <RadioGroup
                android:id="@+id/rgPoleMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbBothPoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_all_modes"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbDifferent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_split_modes" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/cbUsePolarity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_polarity_toggle"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />

            <LinearLayout
                android:id="@+id/groupAllPoleActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_all_poles"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:paddingBottom="6dp"
                    android:text="@string/pole_all_label" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_short_press"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spAllShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_long_press"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spAllLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupSplitPoleActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_split_modes"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:paddingBottom="6dp"
                    android:text="@string/label_mode_selection" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_n_short"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spNShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_n_long"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spNLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_s_short"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spSShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_s_long"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spSLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </LinearLayout>

        <!-- 触发反馈 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_desc"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchFeedbackSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_sound"
                android:textColor="#111827"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchFeedbackVoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_voice"
                android:textColor="#111827"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchFeedbackVibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_vibration"
                android:textColor="#111827"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- 自动归零 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_auto_zero"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_auto_zero"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_low_field_threshold"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_auto_zero_threshold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_low_field_duration"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroSeconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_auto_zero_seconds"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_stable_duration"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroStableSeconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_auto_zero_stable_seconds"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_stable_band"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroStableBand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_auto_zero_band" />
        </LinearLayout>

        <!-- 节能与采样 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_energy_sampling"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_energy_sampling"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_energy_threshold"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEnergyThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_energy_threshold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_energy_hold"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEnergyHoldMs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/hint_energy_hold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_sampling_high"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSamplingHighHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_sampling_high"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_sampling_low"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSamplingLowHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_sampling_low" />
        </LinearLayout>

        <!-- 强磁贴合保护 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_strong_suppression"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_strong_suppression"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_strong_threshold"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etStrongSuppressionThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_strong_suppression_threshold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_duration_ms"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etStrongSuppressionDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/hint_strong_suppression_duration"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_max_jitter"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etStrongSuppressionJitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/hint_strong_suppression_jitter" />
        </LinearLayout>

        <!-- 蓝牙白名单 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_desc"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="10dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchAllowAllOutputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_allow_all_outputs"
                android:textColor="#111827"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_allow_all_outputs_desc"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvBtSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_selected_none"
                android:textColor="#374151"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/btnSelectBt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/bt_select_btn"
                android:background="@drawable/bg_button_flat"
                android:textColor="#0B1224"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- 保存 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/btn_save_settings"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_flat"
                android:textColor="#0B1224" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
