<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="后台调校"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="滑雪佩手套时用磁铁控制耳机，保持简洁。数值均为直输，单位已标注。"
            android:textColor="#666"
            android:textSize="13sp"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingBottom="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:backgroundTint="#FFFFFF"
            android:translationZ="1dp"
            android:stateListAnimator="@null">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="磁场阈值"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="超过触发值开始计时，回落到恢复值并持续防抖时间才视为松开。单位：μT、ms"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="触发阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etThresholdTrigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：600"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="恢复阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etThresholdReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：300"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="恢复防抖 (ms)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etResetDebounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="例如：80"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="长按判定 (ms)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etLongPressMs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="例如：1500"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="极性识别最小值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPolarityMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：50"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="极性锁定最大值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPolarityMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：600 或 1200"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:stateListAnimator="@null"
            android:translationZ="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动归零"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="两条规则同时检测，任意满足即自动重置零点，后台运行同样生效。"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低磁场归零阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：80.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低磁场维持时间 (秒)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroSeconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：4.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="稳定波动维持时间 (秒)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroStableSeconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：4.0"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="稳定波动幅度 (±μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAutoZeroStableBand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：20.0"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示：两条逻辑并行：① 磁场持续低于设定阈值；② 磁场波动长期落在设定幅度内。建议阈值略高于地磁 (≈50 μT)，持续 3-5 秒更平滑。"
            android:textColor="#888"
            android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:stateListAnimator="@null"
            android:translationZ="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_title"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_desc"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/tvBtSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_selected_none"
                android:textColor="#374151"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/btnSelectBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bt_select_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:stateListAnimator="@null"
            android:translationZ="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="强磁贴合保护"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="强磁长时间贴合且波动极低时，忽略当前触发并用 3 声提示失败。单位：μT、ms"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="判定阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etStrongSuppressionThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：1800"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="持续时间 (ms)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etStrongSuppressionDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="例如：400"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最大抖动 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etStrongSuppressionJitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：40"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示：用于抑制三轴霍尔在强磁贴近时的失灵。阈值参考手套磁铁贴合时的峰值，抖动建议 20-50 μT。"
                android:textColor="#888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:stateListAnimator="@null"
            android:translationZ="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="节能与采样"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低场时降低采样，节电但保留灵敏。单位：μT、ms、Hz"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="节能阈值 (μT)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEnergyThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：100"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="降采样延时 (ms)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEnergyHoldMs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="例如：2000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高采样频率 (Hz)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSamplingHighHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：50"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低采样频率 (Hz)"
                android:textColor="#374151"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSamplingLowHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="例如：15"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示：滑雪口袋放手机时可降低低频采样至 10-15 Hz。"
                android:textColor="#888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:stateListAnimator="@null"
            android:translationZ="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="触发模式"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="先选全局模式，再编辑对应的长/短按动作。"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="模式选择"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <RadioGroup
                android:id="@+id/rgPoleMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbBothPoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="所有极性（只看磁场强度）"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbDifferent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="区分极性（单独配置 N / S）" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/groupAllPoleActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="长短按动作"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="不看 N/S 极性，只用磁场强度触发。"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:paddingBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="短按动作"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spAllShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="长按动作"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spAllLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupSplitPoleActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="区分 N / S" 
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="保持原有极性识别逻辑，适合手套双侧磁铁。"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:paddingBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N 极短按"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spNShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N 极长按"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spNLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S 极短按"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spSShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S 极长按"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spSLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存设置"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
