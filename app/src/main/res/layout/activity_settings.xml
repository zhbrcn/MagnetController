<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="后台调校"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="滑雪佩手套时用磁铁控制耳机，保持简洁。数值均为直输，单位已标注。"
            android:textColor="#666"
            android:textSize="13sp"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingBottom="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:backgroundTint="#FFFFFF"
            android:translationZ="1dp"
            android:stateListAnimator="@null">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="磁场阈值"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高于触发阈值开始计时，低于恢复阈值并持续防抖时间判定松开。单位：μT、ms"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <EditText
                android:id="@+id/etThresholdTrigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="触发阈值 (μT)"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etThresholdReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="恢复阈值 (μT)"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etResetDebounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="恢复防抖 (ms)"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etLongPressMs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="长按判定 (ms)"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etPolarityMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="极性识别最小值 (μT)"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etPolarityMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="极性锁定最大值 (μT)"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etPolarityDebounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="极性防抖时间 (ms)"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:stateListAnimator="@null"
            android:translationZ="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动归零"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="磁场持续偏弱时自动重置零点，滑雪途中口袋里不再漂移。"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <EditText
                android:id="@+id/etAutoZeroThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="低磁场阈值 (μT)"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etAutoZeroSeconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="持续时间 (秒)"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示：建议阈值略高于地磁（50μT 左右），持续 3-5 秒。"
                android:textColor="#888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:stateListAnimator="@null"
            android:translationZ="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="节能与采样"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低场时降低采样，节电但保留灵敏。单位：μT、ms、Hz"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <EditText
                android:id="@+id/etEnergyThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="节能阈值 (μT)"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etEnergyHoldMs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="降采样延时 (ms)"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etSamplingHighHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="高采样频率 (Hz)"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etSamplingLowHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="低采样频率 (Hz)"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示：滑雪口袋放手机时可降低低频采样至 10-15Hz。"
                android:textColor="#888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:stateListAnimator="@null"
            android:translationZ="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="触发动作"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="四个动作改用下拉选择，便于单手浏览。"
                android:textColor="#666"
                android:textSize="13sp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="磁极模式"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <RadioGroup
                android:id="@+id/rgPoleMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbBothPoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="所有磁极（N/S 都触发）"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbDifferent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="区分磁极（N/S 可配置不同动作）" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N 极短按"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingTop="8dp" />

            <Spinner
                android:id="@+id/spNShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N 极长按"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingTop="8dp" />

            <Spinner
                android:id="@+id/spNLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S 极短按"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingTop="8dp" />

            <Spinner
                android:id="@+id/spSShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S 极长按"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingTop="8dp" />

            <Spinner
                android:id="@+id/spSLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存设置"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
